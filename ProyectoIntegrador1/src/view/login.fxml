            <TextField fx:id="txtUsuario" maxWidth="250" promptText="Usuario" />
            <PasswordField fx:id="txtPassword" maxWidth="250" promptText="Contraseña" />
            
            <Button fx:id="btnLogin" maxWidth="250" style="-fx-background-color: #004a99; -fx-text-fill: white;" text="Iniciar Sesión" />
