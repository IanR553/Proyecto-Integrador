<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="681.0" prefWidth="700.0" style="-fx-background-color: beige;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ReservaUController">

    <top>
        <AnchorPane prefHeight="100.0" prefWidth="700.0">
            <children>
                <ImageView fitHeight="88.0" fitWidth="407.0" layoutX="10.0" layoutY="6.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../resources/images/logo-udi.png" />
                    </image>
                </ImageView>
            </children>
        </AnchorPane>
    </top>

    <center>
        <AnchorPane prefHeight="580.0" prefWidth="700.0" BorderPane.alignment="CENTER">
            <children>
                <Label layoutX="250.0" layoutY="7.0" text="GESTOR DE RESERVAS" textFill="#121213">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>

                <Button fx:id="btnReservaSala" layoutX="250.0" layoutY="40.0" prefHeight="26.0" prefWidth="200.0" style="-fx-background-color: #0073e6; -fx-text-fill: white;" text="Reservar Sala">
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>

                <Button fx:id="btnReservaEquipo" layoutX="250.0" layoutY="80.0" prefHeight="26.0" prefWidth="200.0" style="-fx-background-color: #0073e6; -fx-text-fill: white;" text="Reservar Equipo">
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>

                <!-- Tabla Salas Reservadas -->
                <Label layoutX="40.0" layoutY="125.0" text="Salas Reservadas:" textFill="#000000">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>

                <TableView fx:id="tableSalas" layoutX="40.0" layoutY="150.0" prefHeight="130.0" prefWidth="620.0">
                    <columns>
                        <TableColumn fx:id="colIdSala" prefWidth="100.0" text="ID" />
                        <TableColumn fx:id="colNombreSala" prefWidth="150.0" text="Nombre" />
                        <TableColumn fx:id="colCapacidadSala" prefWidth="100.0" text="Capacidad" />
                        <TableColumn fx:id="colEstadoSala" prefWidth="100.0" text="Estado" />
                        <TableColumn fx:id="colUbicacionSala" prefWidth="100.0" text="Ubicación" />
                        <TableColumn fx:id="colSoftwareSala" prefWidth="70.0" text="Software" />
                    </columns>
                </TableView>

                <!-- Tabla Equipos Reservados -->
                <Label layoutX="40.0" layoutY="290.0" text="Equipos Reservados:" textFill="#000000">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>

                <TableView fx:id="tableEquipos" layoutX="40.0" layoutY="315.0" prefHeight="130.0" prefWidth="620.0">
                    <columns>
                        <TableColumn fx:id="colIdEquipo" prefWidth="100.0" text="ID" />
                        <TableColumn fx:id="colTipoEquipo" prefWidth="150.0" text="Tipo" />
                        <TableColumn fx:id="colMarcaEquipo" prefWidth="150.0" text="Marca" />
                        <TableColumn fx:id="colEstadoEquipo" prefWidth="100.0" text="Estado" />
                        <TableColumn fx:id="colSoftwareEquipo" prefWidth="120.0" text="Software" />
                    </columns>
                </TableView>

                <!-- Botones de acción -->
                <Button fx:id="btnEliminar" layoutX="100.0" layoutY="470.0" prefHeight="26.0" prefWidth="152.0" style="-fx-background-color: #004a99; -fx-text-fill: white;" text="Eliminar Reserva">
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>

                <Button fx:id="btnModificar" layoutX="284.0" layoutY="470.0" prefHeight="26.0" prefWidth="160.0" style="-fx-background-color: #004a99; -fx-text-fill: white;" text="Modificar Reserva">
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>

                <Button fx:id="btnCerrarSesion" layoutX="460.0" layoutY="470.0" prefHeight="26.0" prefWidth="174.0" style="-fx-background-color: #ff3333; -fx-text-fill: white;" text="Cerrar Sesión">
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>

            </children>
        </AnchorPane>
    </center>
</BorderPane>
